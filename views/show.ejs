<% layout('./layouts/boilerplate.ejs') %>

<div class="container mt-6">
  <div class="row g-0 shadow rounded shadow rounded" style="max-width: 1000px; margin: auto;">
    <!-- Left side -->
    <div class="col-md-7">
      <div id="carouselExample" class="carousel slide h-100">
        <div class="carousel-inner h-100">
          <% showPet.images.forEach((img, i) => { %>
          <div class="carousel-item <%= i === 0 ? 'active' : '' %> h-100">
            <img src="<%= img %>" class="d-block w-100 h-100" style="object-fit: cover;" alt="Slika ljubimca">
          </div>
          <% }) %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

    </div>

    <!-- Right side - Card info -->
    <div class="col-md-5 bg-light d-flex flex-column">
      <div class="card-body p-4">
        <h4 class="card-title mb-3"><%= showPet.name %></h4>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><b>Oglas postavio:</b> </li>
          <li class="list-group-item"><b>Kontakt:</b> </li>
          <li class="list-group-item"><b>Pol:</b> <%= showPet.gender %></li>
          <li class="list-group-item"><b>Lokacija:</b> <%= showPet.location %></li>
          <li class="list-group-item">
            <b>Starost:</b>
            <% if(showPet.age.years) { %>
            <%= showPet.age.years %> godina
            <% } else { %>
            <%= showPet.age.months %> meseci
            <% } %>
          </li>
          <li class="list-group-item"><b>Objavljeno:</b> <%= showPet.createdAt.toLocaleDateString("sr-RS") %></li>
          <li class="list-group-item"><b>Vakcinisan:</b> <%= showPet.vaccinated ? "Da" : "Ne" %></li>
          <li class="list-group-item"><%= showPet.description %></li>
        </ul>
      </div>
      <div class="card-body text-center mt-auto pb-4">
        <a href="#" class="btn btn-info mx-2">Izmeni oglas</a>
        <a href="#" class="btn btn-danger mx-2">Obri≈°i oglas</a>
      </div>

    </div>
  </div>