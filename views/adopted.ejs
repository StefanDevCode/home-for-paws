<% layout('./layouts/boilerplate.ejs') %>

<div class="container">
  <div class="row">
    <% for (let adopted of adoptedPets) { %>
    <div class="col-12 col-md-6 col-lg-4 g-4">
      <div class="card h-100">
        <img src="<%= adopted.images[0] && adopted.images[0].includes('http') ? adopted.images[0] : 'https://images.unsplash.com/photo-1601758177266-bc599de87707?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D' %>" class="card-img-top" style="height: 200px; object-fit: cover; object-position: center" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= adopted.name %></h5>
          <p class="card-text"><%= adopted.description %></p>
          <p class="card-text">Udomljen dana: <%= adopted.adoptedAt.toLocaleDateString('sr-RS') %></p>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>