<% layout("./layouts/boilerplate.ejs") %>

<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80" alt="" class="card-img-top" />

        <div class="card-body">
          <h5 class="card-title text-center mb-4">Uloguj se</h5>

          <form action="/forgot" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="email">Unesite svoj email</label>
              <input class="form-control" type="email" id="email" name="email" placeholder="email@example.com" required autofocus>
            </div>

            <button class="btn btn-primary w-100 mb-3">Po≈°alji link za reset</button>
          </form>

          <div class="text-center">
            <a href="/login">Vrati se na login</a>
          </div>


        </div>
      </div>
    </div>
  </div>
</div>