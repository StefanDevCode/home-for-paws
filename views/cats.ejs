<% layout('./layouts/boilerplate.ejs') %>
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/navbarCustom.css">
  <title>Mačke</title>
</head>

<body>
  <div class="container mt-4">
    <div class="row">
      <% for (let cat of cats) { %>
      <div class="col-md-4 mb-3">
        <div class="card">
          <img src="<%= cat.image %>" class="card-img-top" style="height: 200px; object-fit: cover; object-position: center" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= cat.name %></h5>
            <p class="card-text"><%= cat.description %></p>
            <a href="#" class="btn btn-primary">Prikaži više</a>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>

</body>

</html>